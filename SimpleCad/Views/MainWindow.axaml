<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SimpleCad.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SimpleCad.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SimpleCad.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SimpleCad"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Width="900" Height="700">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto, *">
    
    <Menu Grid.Row="0">
      <MenuItem Header="_File">
        <MenuItem Name="FileOpen" Header="_Open..." />
        <Separator />
        <MenuItem Name="FileSaveAs" Header="Save _As..." />
      </MenuItem>
      <MenuItem Header="_Tool">
        <MenuItem Name="ToolSelection" Header="_Selection" />
        <Separator />
        <MenuItem Name="ToolLine" Header="_Line" />
      </MenuItem>
    </Menu>
  
    <views:CadCanvas Name="CadCanvas" 
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Grid.Row="1" />

  </Grid>

</Window>
